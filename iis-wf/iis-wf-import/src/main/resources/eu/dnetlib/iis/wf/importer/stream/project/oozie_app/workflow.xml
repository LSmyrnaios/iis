<workflow-app xmlns="uri:oozie:workflow:0.4" name="importer_stream_project">
	
	<parameters>
        <property>
            <name>streaming_facade_factory_classname</name>
            <value>eu.dnetlib.iis.wf.importer.stream.project.UrlStreamingFacadeFactory</value>
            <description>ServiceFacadeFactory implementation class name producing eu.dnetlib.iis.wf.importer.stream.project.StreamingFacade</description>
        </property>
        <property>
            <name>dnet_service_client_read_timeout</name>
            <value>60000</value>
            <description>DNet service client reading timeout (expressed in milliseconds)</description>
        </property>
        <property>
            <name>dnet_service_client_connection_timeout</name>
            <value>60000</value>
            <description>DNet service client connection timeout (expressed in milliseconds)</description>
        </property>
		<property>
			<name>project_stream_endpoint_url</name>
			<description>projects streaming service endpoint url</description>
		</property>
        <property>
            <name>project_stream_compress</name>
            <value>true</value>
            <description>flag indicating stream compression should be enabled</description>
        </property>
		<property>
			<name>output</name>
			<description>project output directory</description>
		</property>
        <property>
            <name>output_report_root_path</name>
            <description>base directory for storing reports</description>
        </property>
        <property>
            <name>output_report_relative_path</name>
            <value>import_project</value>
            <description>directory for storing report (relative to output_report_root_path)</description>
        </property>
	</parameters>

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
	<start to="streaming-project-importer" />
	
	<action name="streaming-project-importer">
		<java>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${output}" />
			</prepare>
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.wf.importer.stream.project.StreamingProjectImporter</arg>
			<arg>-Pimport.project.stream.endpoint.url=${project_stream_endpoint_url}</arg>
            <arg>-Pimport.project.stream.compress=${project_stream_compress}</arg>
            <arg>-Pimport.facade.factory.classname=${streaming_facade_factory_classname}</arg>
            <arg>-Pdnet.service.client.read.timeout=${dnet_service_client_read_timeout}</arg>
            <arg>-Pdnet.service.client.connection.timeout=${dnet_service_client_connection_timeout}</arg>
			<arg>-Oproject=${output}</arg>
            <capture-output />
		</java>
		<ok to="report" />
		<error to="fail" />
	</action>
	
    <action name="report">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.common.report.ReportGenerator</arg>
            <arg>-Preport.import.project.total=${wf:actionData('streaming-project-importer')['PROJECT_COUNTER']}</arg>
            <arg>-Oreport=${output_report_root_path}/${output_report_relative_path}</arg>
        </java>
        <ok to="end" />
        <error to="fail" />
    </action>
    
	<kill name="fail">
		<message>Unfortunately, the process failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
	</kill>
	<end name="end" />
</workflow-app>
