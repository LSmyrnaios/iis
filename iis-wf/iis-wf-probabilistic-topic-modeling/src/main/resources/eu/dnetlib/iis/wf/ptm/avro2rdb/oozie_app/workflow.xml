<workflow-app xmlns="uri:oozie:workflow:0.4" name="ptm_avro2rdb">

    <parameters>
        <property>
            <name>input_meta</name>
            <description>input eu.dnetlib.iis.transformers.metadatamerger.schemas.ExtractedDocumentMetadataMergedWithOriginal records</description>
        </property>
        <property>
            <name>input_text</name>
            <description>input eu.dnetlib.iis.metadataextraction.schemas.DocumentText records</description>
        </property>
        <property>
            <name>input_project</name>
            <description>input eu.dnetlib.iis.importer.schemas.Project records</description>
        </property>
        <property>
            <name>input_document_to_project</name>
            <description>input eu.dnetlib.iis.referenceextraction.project.schemas.DocumentToProject records</description>
        </property>
        <property>
            <name>input_document_to_pdb</name>
            <description>input eu.dnetlib.iis.referenceextraction.researchinitiative.schemas.DocumentToConceptId records with references to protein databank codes</description>
        </property>
        <property>
            <name>input_citation</name>
            <description>input eu.dnetlib.iis.common.citations.schemas.Citation records</description>
        </property>

        <property>
            <name>confidenceLevelCitationThreshold</name>
            <description>confidence level threshold related to inferred matched internal citations</description>
        </property>
        <property>
            <name>confidenceLevelDocumentToProjectThreshold</name>
            <description>confidence level threshold related to inferred project relations</description>
        </property>
        <property>
            <name>confidenceLevelDocumentToPdbThreshold</name>
            <description>confidence level threshold related to inferred protein databank codes</description>
        </property>
        <property>
            <name>fundingClassWhitelist</name>
            <description>white list regex accepting fundingClass field values from project datastore</description>
        </property>

        <property>
            <name>output_database_url</name>
            <description>relation database url, where data should be exported</description>
        </property>
        <property>
            <name>output_database_username</name>
            <description>database user name</description>
        </property>
        <property>
            <name>output_database_password</name>
            <description>password required to access database</description>
        </property>
        
        <property>
            <name>output_report_root_path</name>
            <description>base directory for storing reports</description>
        </property>
        <property>
            <name>output_report_relative_path</name>
            <value>ptm_avro2rdb</value>
            <description>directory for storing report (relative to output_report_root_path)</description>
        </property>
        
        <property>
            <name>sparkExecutorMemory</name>
            <description>memory for individual executor</description>
        </property>
        
        <property>
            <name>sparkNumExecutors</name>
            <description>total number of executors</description>
        </property>
        <property>
            <name>sparkExecutorCores</name>
            <description>number of cores used by single executor</description>
        </property>
        <property>
            <name>sparkDriverMemory</name>
            <description>memory for driver process</description>
        </property>
    </parameters>

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    <start to="avro2rdb" />

    <action name="avro2rdb">
        <spark xmlns="uri:oozie:spark-action:0.2">

            <master>yarn-cluster</master>
            <mode>cluster</mode>
            <name>ptm_avro2rdb</name>
            <class>eu.dnetlib.iis.wf.ptm.avro2rdb.AvroToRdbTransformerJob</class>
            <jar>${oozieTopWfApplicationPath}/lib/iis-wf-probabilistic-topic-modeling-${projectVersion}.jar</jar>
            
            <spark-opts>--executor-memory ${sparkExecutorMemory} --num-executors ${sparkNumExecutors} --executor-cores ${sparkExecutorCores} --driver-memory=${sparkDriverMemory}</spark-opts>

            <arg>-inputMetadataAvroPath=${input_meta}</arg>
            <arg>-inputTextAvroPath=${input_text}</arg>
            <arg>-inputProjectAvroPath=${input_project}</arg>
            <arg>-inputDocumentToProjectAvroPath=${input_document_to_project}</arg>
            <arg>-inputDocumentToPdbAvroPath=${input_document_to_pdb}</arg>
            <arg>-inputCitationAvroPath=${input_citation}</arg>
            
            <arg>-outputReportPath=${output_report_root_path}/${output_report_relative_path}</arg>

            <arg>-confidenceLevelCitationThreshold=${confidenceLevelCitationThreshold}</arg>
            <arg>-confidenceLevelDocumentToProjectThreshold=${confidenceLevelDocumentToProjectThreshold}</arg>
            <arg>-confidenceLevelDocumentToPdbThreshold=${confidenceLevelDocumentToPdbThreshold}</arg>
            <arg>-fundingClassWhitelist=${fundingClassWhitelist}</arg>
            
            <arg>-databaseUrl=${output_database_url}</arg>
            <arg>-databaseUserName=${output_database_username}</arg>
            <arg>-databasePassword=${output_database_password}</arg>

        </spark>
        <ok to="end" />
        <error to="fail" />
    </action>
    
    <kill name="fail">
        <message>Unfortunately, the workflow failed -- error message:
            [${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>
    <end name="end" />
</workflow-app>
