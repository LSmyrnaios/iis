<workflow-app xmlns="uri:oozie:workflow:0.4" name="transformers_export_concepts_chain">
    
    <parameters>
        <property>
            <name>input</name>
            <description>DocumentToConceptId records to be exported</description>
        </property>
        <property>
            <name>input_blacklist</name>
            <description>DocumentToConceptId records to be removed from input</description>
        </property>
        <property>
            <name>output</name>
        </property>
        <property>
            <name>output_report_root_path</name>
            <description>base directory for storing reports</description>
        </property>
        <property>
            <name>output_report_relative_path</name>
            <description>subdirectory for the given report</description>
        </property>
        <property>
            <name>output_report_record_read_counter_name</name>
            <description>name of the counter with the number of input records</description>
        </property>
        <property>
            <name>output_report_record_written_counter_name</name>
            <description>name of the counter with the number of output records</description>
        </property>
        
    </parameters>
    
    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    <start to="filter"/>
    
    <action name="filter">
        <sub-workflow>
            <app-path>${wf:appPath()}/transformer_filter_concepts</app-path>
            <propagate-configuration />
            <configuration>
                <property>
                    <name>output</name>
                    <value>${workingDir}/transformer_export_concepts/input-filtered</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="grouper"/>
        <error to="fail"/>
    </action>
    
    <action name="grouper">
        <sub-workflow>
            <app-path>${wf:appPath()}/transformer_group_concepts</app-path>
            <propagate-configuration />
            <configuration>
                <property>
                    <name>input</name>
                    <value>${workingDir}/transformer_export_concepts/input-filtered</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="end"/>
        <error to="fail"/>
    </action>
        
    <kill name="fail">
        <message>Unfortunately, the workflow failed -- error message:
            [${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
