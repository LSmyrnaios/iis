<workflow-app xmlns="uri:oozie:workflow:0.4" name="transformers_statistics">
    	
	<parameters>
		<property>
			<name>input_document</name>
			<description>input document</description>
		</property>
		<property>
			<name>input_citation</name>
			<description>input citation</description>
		</property>
        <property>
			<name>input_person</name>
			<description>input person</description>
		</property>
        <property>
			<name>input_project</name>
			<description>input project</description>
		</property>
        <property>
			<name>input_document_to_project</name>
			<description>input document to project</description>
		</property>
		<property>
			<name>output_document_authors_citations</name>
			<description>output document with authors and citation</description>
		</property>
		<property>
			<name>output_person_id</name>
			<description>output person id</description>
		</property>
        <property>
			<name>output_project_id</name>
			<description>output project id</description>
		</property>
	</parameters>
    
    <start to="generate-schema"/>
    
    <action name="generate-schema">
	    <java>
    		<job-tracker>${jobTracker}</job-tracker>
        	<name-node>${nameNode}</name-node>
	        <main-class>eu.dnetlib.iis.core.javamapreduce.hack.AvroSchemaGenerator</main-class>
	        <arg>eu.dnetlib.iis.transformers.metadatamerger.schemas.ExtractedDocumentMetadataMergedWithOriginal</arg>
	        <arg>eu.dnetlib.iis.citationmatching.schemas.Citation</arg>
	        <arg>eu.dnetlib.iis.importer.schemas.Person</arg>
	        <arg>eu.dnetlib.iis.importer.schemas.Project</arg>
	        <arg>eu.dnetlib.iis.importer.schemas.DocumentToProject</arg>
	        <arg>eu.dnetlib.iis.statistics.schemas.DocumentWithAuthorsAndCitations</arg>
	        <arg>eu.dnetlib.iis.statistics.schemas.PersonId</arg>
	        <arg>eu.dnetlib.iis.statistics.schemas.ProjectId</arg>
	        <capture-output />
	    </java>
	    <ok to="transformer" />
	    <error to="fail" />
	</action>
	
    <action name="transformer">
        <pig>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${output_document_authors_citations}" />
				<delete path="${nameNode}${output_person_id}" />
				<delete path="${nameNode}${output_project_id}" />
			</prepare>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <!-- Path to PIG script the workflow executes. -->
            <script>lib/scripts/transformer.pig</script>
            
            <param>input_document=${input_document}</param>
            <param>schema_input_document=${wf:actionData('generate-schema')['eu.dnetlib.iis.transformers.metadatamerger.schemas.ExtractedDocumentMetadataMergedWithOriginal']}</param>
            
            <param>input_citation=${input_citation}</param>
            <param>schema_input_citation=${wf:actionData('generate-schema')['eu.dnetlib.iis.citationmatching.schemas.Citation']}</param>
            
            <param>input_person=${input_person}</param>
            <param>schema_input_person=${wf:actionData('generate-schema')['eu.dnetlib.iis.importer.schemas.Person']}</param>
            
            <param>input_project=${input_project}</param>
            <param>schema_input_project=${wf:actionData('generate-schema')['eu.dnetlib.iis.importer.schemas.Project']}</param>
            
            <param>input_document_to_project=${input_document_to_project}</param>
            <param>schema_input_document_to_project=${wf:actionData('generate-schema')['eu.dnetlib.iis.importer.schemas.DocumentToProject']}</param>
            
            <param>output_document_authors_citations=${output_document_authors_citations}</param>
            <param>schema_output_document_authors_citations=${wf:actionData('generate-schema')['eu.dnetlib.iis.statistics.schemas.DocumentWithAuthorsAndCitations']}</param>
            
            <param>output_person_id=${output_person_id}</param>
            <param>schema_output_person_id=${wf:actionData('generate-schema')['eu.dnetlib.iis.statistics.schemas.PersonId']}</param>
            
            <param>output_project_id=${output_project_id}</param>
            <param>schema_output_project_id=${wf:actionData('generate-schema')['eu.dnetlib.iis.statistics.schemas.ProjectId']}</param>
        </pig>
        <ok to="end"/>
        <error to="fail"/>
    </action>
    <kill name="fail">
		<message>Unfortunately, the workflow failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
