<workflow-app xmlns="uri:oozie:workflow:0.4" name="ptm_execute_export">
	
	<parameters>
        <property>
            <name>ptmServiceLocation</name>
            <description>remote RESTful PTM service location</description>
        </property>
        <property>
            <name>checkStatusIntevalSecs</name>
            <value>60</value>
            <description>time interval, expressed in seconds, to check status on a remote PTM service</description>
        </property>
        <property>
            <name>source_database_name</name>
            <description>source database name data should be exported from</description>
        </property>
        <property>
            <name>remote_database_name</name>
            <description>remote database name where data should be exported</description>
        </property>
        <property>
            <name>remote_host</name>
            <description>remote host where data should be exported</description>
        </property>
        <property>
            <name>experimentId</name>
            <description>experiment identifier</description>
        </property>
	</parameters>

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
	<start to="ptm-executor" />
	
	<action name="ptm-executor">
		<java>
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.wf.ptm.PtmPhaseExecutor</arg>

            <arg>-Pphase=export</arg>            

            <arg>-PptmServiceLocation=${ptmServiceLocation}</arg>
			<arg>-PcheckStatusIntevalSecs=${checkStatusIntevalSecs}</arg>
            
            <arg>-Pptm.sourceDB=${source_database_name}</arg>
            <arg>-Pptm.targetDB=${remote_database_name}</arg>
            <arg>-Pptm.targetHostName=${remote_host}</arg>
            <arg>-Pptm.experimentId=${experimentId}</arg>

		</java>
		<ok to="end" />
		<error to="fail" />
	</action>
    
	<kill name="fail">
		<message>Unfortunately, the process failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
	</kill>
	<end name="end" />
</workflow-app>
