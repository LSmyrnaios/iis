<workflow-app xmlns="uri:oozie:workflow:0.4" name="importer_logs">
	
	<parameters>
		<property>
			<name>input</name>
			<description>piwik logs directory location</description>
		</property>
		<property>
			<name>output</name>
			<description>logs avro output</description>
		</property>
	</parameters>

	<start to="logs-importer" />
	
	<action name="logs-importer">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<prepare>
				<delete path="${nameNode}${output}" />
			</prepare>
			<configuration>
				<property>
					<name>mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
			</configuration>
			<main-class>eu.dnetlib.iis.core.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.importer.logs.PiwikLogsImporter</arg>
			<arg>-Pimport.piwik.logs.path=${input}</arg>
			<arg>-Olog_entries=${output}</arg>
		</java>
		<ok to="end" />
		<error to="fail" />
	</action>
	
	<kill name="fail">
		<message>Unfortunately, the process failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
	</kill>
	<end name="end" />
</workflow-app>
