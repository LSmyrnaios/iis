<workflow-app xmlns="uri:oozie:workflow:0.4" name="ptm_monitor">

    <parameters>
        <property>
            <name>timoutSecs</name>
            <value>10</value>
            <description>wait timeout</description>
        </property>
        <property>
            <name>sleepSecs</name>
            <value>1</value>
            <description>sleep time</description>
        </property>
    </parameters>

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    <start to="monitor" />

    <action name="monitor">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.wf.ptm.monitor.ExecutionMonitor</arg>
            <arg>-PtimoutSecs=${timoutSecs}</arg>
            <arg>-PsleepSecs=${sleepSecs}</arg>
        </java>
        <ok to="end" />
        <error to="fail" />
    </action>
    
    <kill name="fail">
        <message>Unfortunately, the workflow failed -- error message:
            [${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>
    <end name="end" />
</workflow-app>
