<workflow-app xmlns="uri:oozie:workflow:0.2" name="test-transformers_statistics">
    <start to="producer"/>
    <action name="producer">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${workingDir}/producer" />
				<mkdir path="${nameNode}${workingDir}/producer" />
			</prepare>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <!-- This is simple wrapper for the Java code -->
			<main-class>eu.dnetlib.iis.core.java.ProcessWrapper</main-class>
			<!-- The business Java code that gets to be executed -->
			<arg>eu.dnetlib.iis.core.java.jsonworkflownodes.Producer</arg>
			<!-- Specification of the output ports -->
			<arg>-C{document,
				eu.dnetlib.iis.transformers.metadatamerger.schemas.ExtractedDocumentMetadataMergedWithOriginal,
				eu/dnetlib/iis/workflows/transformers/statistics/sampledataproducer/data/document.json}</arg>
            <arg>-C{citation,
				eu.dnetlib.iis.citationmatching.schemas.Citation,
				eu/dnetlib/iis/workflows/transformers/statistics/sampledataproducer/data/citation.json}</arg>
            <arg>-C{person,
				eu.dnetlib.iis.importer.schemas.Person,
				eu/dnetlib/iis/workflows/transformers/statistics/sampledataproducer/data/person.json}</arg>
            <arg>-C{project,
				eu.dnetlib.iis.importer.schemas.Project,
				eu/dnetlib/iis/workflows/transformers/statistics/sampledataproducer/data/project.json}</arg>
            <arg>-C{document_to_project,
				eu.dnetlib.iis.importer.schemas.DocumentToProject,
				eu/dnetlib/iis/workflows/transformers/statistics/sampledataproducer/data/document_to_project.json}</arg>
			<!-- All input and output ports have to be bound to paths in HDFS -->
            <arg>-Odocument=${workingDir}/producer/document</arg>
            <arg>-Ocitation=${workingDir}/producer/citation</arg>
            <arg>-Operson=${workingDir}/producer/person</arg>
            <arg>-Oproject=${workingDir}/producer/project</arg>
            <arg>-Odocument_to_project=${workingDir}/producer/document_to_project</arg>
        </java>
        <ok to="transformer_statistics"/>
        <error to="fail"/>
    </action>
    <action name="transformer_statistics">
        <sub-workflow>
            <app-path>${wf:appPath()}/transformer_statistics</app-path>
            <configuration>
                <property>
                    <name>jobTracker</name>
                    <value>${jobTracker}</value>
                </property>
                <property>
                    <name>nameNode</name>
                    <value>${nameNode}</value>
                </property>
                <property>
                    <name>queueName</name>
                    <value>${queueName}</value>
                </property>
                <!-- Working directory of the subworkflow -->
                <property>
                    <name>workingDir</name>
                    <value>${workingDir}/transformer_statistics/working_dir</value>
                </property>
                <!-- Input ports. -->
                <property>
                    <name>input_document</name>
                    <value>${workingDir}/producer/document</value>
                </property>
                <property>
                    <name>input_citation</name>
                    <value>${workingDir}/producer/citation</value>
                </property>
                <property>
                    <name>input_person</name>
                    <value>${workingDir}/producer/person</value>
                </property>
                <property>
                    <name>input_project</name>
                    <value>${workingDir}/producer/project</value>
                </property>
                <property>
                    <name>input_document_to_project</name>
                    <value>${workingDir}/producer/document_to_project</value>
                </property>
                <!-- Output port bound to given path -->
                <property>
                    <name>output_document_authors_citations</name>
                    <value>${workingDir}/transformer_statistics/document_authors_citations</value>
                </property>
                <property>
                    <name>output_person_id</name>
                    <value>${workingDir}/transformer_statistics/person_id</value>
                </property>
                <property>
                    <name>output_project_id</name>
                    <value>${workingDir}/transformer_statistics/project_id</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="consumer"/>
        <error to="fail"/>
    </action>
    <action name="consumer">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<configuration>
				<property>
					<name>mapred.job.queue.name</name>
					<value>${queueName}</value>
				</property>
			</configuration>
			<!-- This is simple wrapper for the Java code -->
			<main-class>eu.dnetlib.iis.core.java.ProcessWrapper</main-class>
			<!-- The business Java code that gets to be executed -->
			<arg>eu.dnetlib.iis.core.java.jsonworkflownodes.TestingConsumer</arg>
			<!-- Specification of the input ports -->
			<arg>-C{document_authors_citations,
				eu.dnetlib.iis.statistics.schemas.DocumentWithAuthorsAndCitations,
				eu/dnetlib/iis/workflows/transformers/statistics/sampledataproducer/data/document_authors_citations.json}</arg>
            <arg>-C{person_id,
				eu.dnetlib.iis.statistics.schemas.PersonId,
				eu/dnetlib/iis/workflows/transformers/statistics/sampledataproducer/data/person_id.json}</arg>
            <arg>-C{project_id,
				eu.dnetlib.iis.statistics.schemas.ProjectId,
				eu/dnetlib/iis/workflows/transformers/statistics/sampledataproducer/data/project_id.json}</arg>
			<!-- All input and output ports have to be bound to paths in HDFS -->
			<arg>-Idocument_authors_citations=${workingDir}/transformer_statistics/document_authors_citations</arg>
            <arg>-Iperson_id=${workingDir}/transformer_statistics/person_id</arg>
            <arg>-Iproject_id=${workingDir}/transformer_statistics/project_id</arg>
		</java>
		<ok to="end" />
		<error to="fail" />
	</action>
    <kill name="fail">
		<message>Unfortunately, the workflow failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
