<workflow-app xmlns="uri:oozie:workflow:0.4" name="test-transformers_export_concepts_filtered">

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>
    
    
    <start to="producer"/>

    <action name="producer">
        <java>
			<!-- The data generated by this node is deleted in this section -->
			<prepare>
				<delete path="${nameNode}${workingDir}/producer" />
				<mkdir path="${nameNode}${workingDir}/producer" />
			</prepare>
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.common.java.jsonworkflownodes.Producer</arg>
            <arg>-C{document_to_concept_id,
				eu.dnetlib.iis.referenceextraction.researchinitiative.schemas.DocumentToConceptId,
				eu/dnetlib/iis/wf/transformers/export/concepts/filter/test/data/document_to_concept_id.json}</arg>
            <arg>-C{document_to_concept_id_blacklist,
                eu.dnetlib.iis.referenceextraction.researchinitiative.schemas.DocumentToConceptId,
                eu/dnetlib/iis/wf/transformers/export/concepts/filter/test/data/document_to_concept_id_blacklist.json}</arg>
            <arg>-Odocument_to_concept_id=${workingDir}/producer/output</arg>
            <arg>-Odocument_to_concept_id_blacklist=${workingDir}/producer/output_blacklist</arg>
        </java>
        <ok to="transformer_filter_concepts"/>
        <error to="fail"/>
    </action>
    
    <action name="transformer_filter_concepts">
        <sub-workflow>
            <app-path>${wf:appPath()}/transformer_filter_concepts</app-path>
            <configuration>
                <property>
                    <name>jobTracker</name>
                    <value>${jobTracker}</value>
                </property>
                <property>
                    <name>nameNode</name>
                    <value>${nameNode}</value>
                </property>
                <property>
                    <name>queueName</name>
                    <value>${queueName}</value>
                </property>
                <property>
                    <name>oozieLauncherQueueName</name>
                    <value>${oozieLauncherQueueName}</value>
                </property>
                <property>
                    <name>input</name>
                    <value>${workingDir}/producer/output</value>
                </property>
                <property>
                    <name>input_blacklist</name>
                    <value>${workingDir}/producer/output_blacklist</value>
                </property>
                <property>
                    <name>output</name>
                    <value>${workingDir}/transformer_export_concepts/output</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="consumer"/>
        <error to="fail"/>
    </action>

    <action name="consumer">
		<java>
			<main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
			<arg>eu.dnetlib.iis.common.java.jsonworkflownodes.TestingConsumer</arg>
			<arg>-C{output,
				eu.dnetlib.iis.referenceextraction.researchinitiative.schemas.DocumentToConceptId,
				eu/dnetlib/iis/wf/transformers/export/concepts/filter/test/data/document_to_concept_id_output.json}</arg>
			<arg>-Ioutput=${workingDir}/transformer_export_concepts/output</arg>
        </java>
		<ok to="end" />
		<error to="fail" />
	</action>    

    <kill name="fail">
		<message>Unfortunately, the workflow failed -- error message:
			[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>

    <end name="end"/>

</workflow-app>
